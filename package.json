{
  "name": "francoisromain.github.io.postcss-typescale",
  "version": "0.1.0",
  "description": "gh-pages for postcss-typescale",
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": "francoisromain/postcss-typescale",
  "scripts": {
    "babel": "babel postcss-typescale/src --out-dir postcss-typescale/lib",
    "css-typescale": "postcss src/typescale.css -o dist/typescale.css",
    "css-01": "postcss test/src/01.css -o test/dist/01.css",
    "css-02": "postcss test/src/02.css -o test/dist/02.css",
    "build": "npm run babel && npm run test",
    "test": "npm run babel && npm run css-typescale && npm run css-01 && npm run css-02",
    "watch": "onchange 'index.html' 'src/**/*.*' 'postcss-typescale/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "livereload": "^0.6.2",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "postcss": "^6.0.12",
    "postcss-cli": "^4.1.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
