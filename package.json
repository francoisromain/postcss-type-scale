{
  "name": "postcss-typescale",
  "version": "0.2.3",
  "description": "A PostCSS plugin to set type based on a typographic scale.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "typographic scale",
    "postcss-structure"
  ],
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/francoisromain/postcss-typescale.git"
  },
  "bugs": {
    "url": "https://github.com/francoisromain/postcss-typescale/issues"
  },
  "homepage": "http://francoisromain.github.io/postcss-typescale/",
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "npm run build && ava && eslint '**/*.js'"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "postcss": "^7.0.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "ava": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/tests.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
