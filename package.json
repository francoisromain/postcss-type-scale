{
  "name": "postcss-typescale",
  "version": "0.2.0",
  "description": "A PostCSS plugin to set type based on a typographic scale.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "typographic scale",
    "postcss-structure"
  ],
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/francoisromain/postcss-typescale.git"
  },
  "bugs": {
    "url": "https://github.com/francoisromain/postcss-typescale/issues"
  },
  "homepage": "http://francoisromain.github.io/postcss-typescale/",
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "ava && eslint *.js"
  },
  "main": "./lib/index.js",
  "dependencies": {
    "postcss": "^6.0.19"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "^4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/tests.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
